<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#86c5e5"
    tools:context=".login">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="20dp">

            <ImageView
                android:id="@+id/backImg"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                />

            <ImageButton
                android:id="@+id/backBtn"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/ic_back"
                />

            <TextView
                android:id="@+id/joinText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="75dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="30dp"
                android:text="@string/loginText"
                android:textSize="20sp"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/textId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/backImg"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="30dp"
                android:text="아이디"
                android:textColor="@color/onyx"
                android:textSize="16sp"
                android:textStyle="bold"
                />
            <EditText
                android:id="@+id/userId"
                android:layout_width="350dp"
                android:layout_height="48dp"
                android:background="@drawable/input_box"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/textId"
                android:layout_marginTop="15dp"
                android:hint="@string/id"
                android:ems="10"
                android:padding="10dp"
                android:textColor="#BDBDBD"
                />
            <TextView
                android:id="@+id/textPasswd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/userId"
                android:layout_marginTop="15sp"
                android:layout_marginLeft="30dp"
                android:text="비밀번호"
                android:textColor="@color/onyx"
                android:textSize="16sp"
                android:textStyle="bold"
                />
            <EditText
                android:id="@+id/userPwd"
                android:layout_width="350dp"
                android:layout_height="48dp"
                android:background="@drawable/input_box"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/textPasswd"
                android:layout_marginTop="15dp"
                android:hint="@string/pwd"
                android:ems="10"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textColor="#BDBDBD"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="350dp"
                android:layout_height="48dp"
                android:onClick="submit"
                android:layout_centerHorizontal="true"
                android:background="@drawable/rounded_dark"
                android:text="로그인"
                android:textSize="20sp"
                android:textColor="@color/ghost_white"
                android:layout_below="@+id/userPwd"
                android:layout_marginTop="180dp"
                />
        </RelativeLayout>
    </ScrollView>


</RelativeLayout>