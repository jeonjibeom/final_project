<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#86c5e5"
    android:fitsSystemWindows="true">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp" />

    <ImageButton
        android:id="@+id/backBtn"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/ic_back" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:text="헬스 자세 기록"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold" />


    <ScrollView
        android:id="@+id/swingNote"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="150dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingVertical="10dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/list1"
                android:layout_width="320dp"
                android:layout_height="85dp"
                android:layout_gravity="center_horizontal"
                app:cardCornerRadius="16dp"
                >

                <TextView
                    android:id="@+id/swingData1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="빈 파일"
                    android:textColor="@color/onyx"
                    android:textSize="15sp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/list2"
                android:layout_width="320dp"
                android:layout_height="75dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="16dp"
                >

                <TextView
                    android:id="@+id/swingData2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="빈 파일"
                    android:textColor="@color/onyx"
                    android:textSize="15sp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/list3"
                android:layout_width="320dp"
                android:layout_height="85dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="16dp"
                >

                <TextView
                    android:id="@+id/swingData3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="빈 파일"
                    android:textColor="@color/onyx"
                    android:textSize="15sp" />


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/list4"
                android:layout_width="320dp"
                android:layout_height="85dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="16dp"
                >

                <TextView
                    android:id="@+id/swingData4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="빈 파일"
                    android:textColor="@color/onyx"
                    android:textSize="15sp" />


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/list5"
                android:layout_width="320dp"
                android:layout_height="85dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="16dp"
                >

                <TextView
                    android:id="@+id/swingData5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="빈 파일"
                    android:textColor="@color/onyx"
                    android:textSize="15sp" />


            </androidx.cardview.widget.CardView>
        </LinearLayout>


    </ScrollView>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/addBtn"
        android:onClick="submit"
        android:layout_width="216dp"
        android:layout_height="50dp"
        android:layout_below="@+id/swingNote"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:background="@drawable/rounded_white"
        android:text="@string/add"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold" />


</RelativeLayout>