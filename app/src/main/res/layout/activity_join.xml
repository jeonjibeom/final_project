<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#86c5e5"
    tools:context=".join">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_alignParentBottom="true"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="15dp"
            >

            <ImageButton
                android:id="@+id/backBtn"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="20dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:background="@drawable/ic_back"
                 />

            <ImageView
                android:id="@+id/circle"
                android:layout_width="158dp"
                android:layout_height="158dp"
                android:layout_alignParentRight="true"
                 />
            <TextView
                android:id="@+id/joinText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="75dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="30dp"
                android:text="@string/joinText"
                android:textSize="20sp"
                android:textColor="@color/black"
                 />
            <TextView
                android:id="@+id/textName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/circle"
                android:layout_marginTop="50sp"
                android:layout_marginLeft="30dp"
                android:text="이름"
                android:textColor="@color/onyx"
                android:textSize="16sp"
                android:textStyle="bold"
                 />
            <EditText
                android:id="@+id/userName"
                android:layout_width="350dp"
                android:layout_height="48dp"
                android:background="@drawable/input_box"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/textName"
                android:layout_marginTop="15dp"
                android:hint="@string/name"
                android:ems="10"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:textColor="#BDBDBD"
                />
            <TextView
                android:id="@+id/textId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/userName"
                android:layout_marginTop="15sp"
                android:layout_marginLeft="30dp"
                android:text="아이디"
                android:textColor="@color/onyx"
                android:textSize="16sp"
                android:textStyle="bold"
                 />
            <EditText
                android:id="@+id/userId"
                android:layout_width="350dp"
                android:layout_height="48dp"
                android:background="@drawable/input_box"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/textId"
                android:layout_marginTop="15dp"
                android:hint="@string/id"
                android:ems="10"
                android:padding="10dp"
                android:textColor="#BDBDBD"
                />
            <TextView
                android:id="@+id/textEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/userId"
                android:layout_marginTop="15sp"
                android:layout_marginLeft="30dp"
                android:text="이메일"
                android:textColor="@color/onyx"
                android:textSize="16sp"
                android:textStyle="bold"
                />
            <EditText
                android:id="@+id/userEmail"
                android:layout_width="350dp"
                android:layout_height="48dp"
                android:background="@drawable/input_box"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/textEmail"
                android:layout_marginTop="15dp"
                android:hint="@string/email"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:padding="10dp"
                android:textColor="#BDBDBD"
                />
            <TextView
                android:id="@+id/textPasswd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/userEmail"
                android:layout_marginTop="15sp"
                android:layout_marginLeft="30dp"
                android:text="비밀번호"
                android:textColor="@color/onyx"
                android:textSize="16sp"
                android:textStyle="bold"
                />
            <EditText
                android:id="@+id/userPwd"
                android:layout_width="350dp"
                android:layout_height="48dp"
                android:background="@drawable/input_box"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/textPasswd"
                android:layout_marginTop="15dp"
                android:hint="@string/pwd"
                android:ems="10"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textColor="#BDBDBD"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:onClick="register"
                android:layout_width="350dp"
                android:layout_height="48dp"
                android:layout_below="@+id/userPwd"
                android:layout_centerHorizontal="true"
                android:background="@drawable/rounded_dark"
                android:layout_marginTop="48dp"
                android:text="회원가입"
                android:textSize="20sp"
                android:textColor="@color/ghost_white"
                />

        </RelativeLayout>

    </ScrollView>



</RelativeLayout>